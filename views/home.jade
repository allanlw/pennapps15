extends layout

block content
	// Navigation
	body#page-top.index
		// Navigation
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header.page-scroll
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar              
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-left
						li
							a Currently Connected Users: 
								span#users -
					// /.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li.hidden
							a(href='#page-top')
						li
							if locals.user
								a(href='/home') #{user.username} (My Account)
								li
									a(href='/signout') Sign Out
							else
								a(href='/login') Login/Sign Up
						li
							a(href='/about') About
							li
								a(href='/') Home
				// /.navbar-collapse
			// /.container-fluid

	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title <br><br><br><br><br>Welcome to Big Cloud, #{user.firstName}. Your information:
						div.signup-wall
							ul.user-details
								li Username : #{user.username}
								li Email    : #{user.email}
								li First Name : #{user.firstName} 
								li Last Name : #{user.lastName}
								li Bit Coin : #{user.bitCoin}
							form(class='form-signin', action = '/home', method='POST')
								input(type='number', name='bitCoin', class='form-control', placeholder='Number of Bit Coins',required, autofocus)
								button(class='btn btn-lg btn-primary btn-block', type='submit') Update Bit Coins
								span.clearfix

						a(href='/signout', class='text-center new-account') Sign Out
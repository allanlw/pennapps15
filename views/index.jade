extends layout

block content
	// Header
	header
		.container
			.intro-text
				.yungLogo
					img(src='/frontend/img/logo.png', height='100px')
				.col-md-12
					.intro-heading.pull-center.fixed
						span#badge 0.00000000
						|  M-BTC Earned!
	.pausePlay
		button#span.fa.fa-play.fa-3x

	// Dropdown
	section#dropdown
		.text-center
			form#multiples(onsubmit='return false;')
				input#one2(type='checkbox', name='easy')
				label(for='one2')
					a.btn-md.btn-primary Details
				p
					br
				span#detailsData
					section#dataGrid.jumbotron
						.row#dataGridHead
							.col-md-6
								h2.section-heading Job
							.col-md-3
								h2.section-heading Status
							.col-md-3
								h2.section-heading Time
							.line
						.row#dataGridPlaceholder
							.line
							.col-md-6 ---
							.col-md-3 ---
							.col-md-3 ---

block scripts
	script.
		$(startMining);
extends layout

block content
	// Navigation
	body#page-top.index
		// Navigation
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header.page-scroll
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar              
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-left
						li
							a Currently Connected Users: 
								span#users -
					// /.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li.hidden
							a(href='#page-top')
						li
							a(href='/login') Login/Sign Up
						li
							a(href='/signup') About
				// /.navbar-collapse
			// /.container-fluid

	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title <br><br><br><br><br>Big Cloud - Registration Details
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
							input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
							input(type='email', name='email', class='form-control', placeholder='Email',required)
							input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
							input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
							input(type='number', name='bitCoin', class='form-control', placeholder='Bit Coin',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}

		// Footer
		footer
			.container
				ul.list-inline.quicklinks
					span(style='float:left;')
						a(href='http://pennapps.com') Created at PennApps 2015
		// jQuery
		script(src='/frontend/js/jquery.js')
		// Bootstrap Core JavaScript
		script(src='/frontend/js/bootstrap.min.js')
		// Plugin JavaScript
		script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
		script(src='/frontend/js/classie.js')
		script(src='/frontend/js/cbpAnimatedHeader.js')
		// Contact Form JavaScript
		script(src='/frontend/js/jqBootstrapValidation.js')
		script(src='/frontend/js/contact_me.js')
		// Custom Theme JavaScript
		script(src='/frontend/js/background.js')
		// Transitions!
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
		script(src='/frontend/js/jquery.dlmenu.js')
		script(src='/frontend/js/pagetransitions.js')

		// Actual client execution
		script(src='/socket.io/socket.io.js')
		script(src='/scripts/client.js')
		script.
			$(startMining);

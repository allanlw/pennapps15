extends layout

block content
	// Navigation
	body#page-top.index
		// Navigation
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header.page-scroll
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar              
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-left
						li
							a Currently Connected Users: 
								span#users -
					// /.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li.hidden
							a(href='#page-top')
						li
							a(href='/login') Login/Sign Up
						li
							a(href='/signup') About
				// /.navbar-collapse
			// /.container-fluid

	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title <br><br><br><br><br>Sign in to Big Cloud
					div.account-wall
						img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					a(href='/signup', class='text-center new-account') Create an account
					#message
					if message
						h1.text-center.error-message #{message}

		// Footer
		footer
			.container
				ul.list-inline.quicklinks
					span(style='float:left;')
						a(href='http://pennapps.com') Created at PennApps 2015
		// jQuery
		script(src='/frontend/js/jquery.js')
		// Bootstrap Core JavaScript
		script(src='/frontend/js/bootstrap.min.js')
		// Plugin JavaScript
		script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
		script(src='/frontend/js/classie.js')
		script(src='/frontend/js/cbpAnimatedHeader.js')
		// Contact Form JavaScript
		script(src='/frontend/js/jqBootstrapValidation.js')
		script(src='/frontend/js/contact_me.js')
		// Custom Theme JavaScript
		script(src='/frontend/js/background.js')
		// Transitions!
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
		script(src='/frontend/js/jquery.dlmenu.js')
		script(src='/frontend/js/pagetransitions.js')

		// Actual client execution
		script(src='/socket.io/socket.io.js')
		script(src='/scripts/client.js')
		script.
			$(startMining);